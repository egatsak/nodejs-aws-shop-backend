{
  "openapi": "3.0.1",
  "info": {
    "title": "ProductApi",
    "version": "2024-06-12 10:15:21UTC"
  },
  "servers": [
    {
      "url": "https://km96rjp673.execute-api.us-east-1.amazonaws.com/{basePath}",
      "variables": {
        "basePath": {
          "default": ""
        }
      }
    }
  ],
  "paths": {
    "/products/{id}": {
      "get": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OneProductModel"
                }
              }
            }
          },
          "400": {
            "description": "400 response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundModel"
                }
              }
            }
          },
          "404": {
            "description": "404 response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundModel"
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "get": {
        "responses": {
          "200": {
            "description": "200 response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AllProductsModel"
                }
              }
            }
          }
        }

      },
      "post": {
        "summary": "Insert new product to a database",
        "responses": {
          "201": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "example": {
                  "description": "Short Product Description2",
                  "count": 6,
                  "price": 12,
                  "title": "ProductTwo",
                  "id": "d714e492-81e5-4b4a-adba-a4be7cbb663e"
                }
              }
            }
          },
          "400": {
            "description": "Validation error",
            "content": {
              "application/json": {
                "example": {
                  "message": "\"count\" must be a number"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "example": {
                  "message": "Internal server error"
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "payloadFormatVersion": "2.0",
          "type": "aws_proxy",
          "httpMethod": "POST",
          "uri": "arn:aws:apigateway:eu-north-1:lambda:path/2015-03-31/functions/arn:aws:lambda:eu-north-1:263622645179:function:getProductById/invocations",
          "connectionType": "INTERNET"
        }
      }
    }
  },
  "components": {
    "schemas": {
      "NotFoundModel": {
        "title": "Error",
        "required": ["message"],
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "OneProductModel": {
        "title": "Product",
        "required": ["description", "id", "price", "title"],
        "type": "object",
        "properties": {
          "price": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          }
        }
      },
      "AllProductsModel": {
        "title": "Products",
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/OneProductModel"
        }
      }
    }
  }
}
